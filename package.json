{
  "name": "@bitkidd/adonis-ally-apple",
  "version": "1.0.4",
  "description": "An Apple driver for Adonis.js Ally",
  "main": "build/providers/index.js",
  "types": "build/standalone.d.ts",
  "files": [
    "build/src",
    "build/providers",
    "build/standalone.js",
    "build/standalone.d.ts",
    "build/instructions.md"
  ],
  "scripts": {
    "clean": "del build",
    "copyfiles": "copyfiles \"instructions.md\" build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && npm run copyfiles",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "version": "npm run build"
  },
  "keywords": [
    "adonisjs",
    "adonis-ally",
    "apple"
  ],
  "author": "Chirill Ceban <cc@bitkidd.dev>",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/ally": "^4.1.3",
    "@adonisjs/core": "^5.7.5",
    "@poppinss/oauth-client": "^4.0.2",
    "@types/node": "^17.0.24",
    "copyfiles": "^2.4.1",
    "del-cli": "^4.0.1",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "@adonisjs/ally": "^4.0.0",
    "@adonisjs/core": "^5.0.0"
  },
  "adonisjs": {
    "instructionsMd": "./build/instructions.md",
    "env": {
      "APPLE_APP_ID": "",
      "APPLE_TEAM_ID": "",
      "APPLE_CLIENT_ID": "",
      "APPLE_CLIENT_SECRET": ""
    },
    "types": "@bitkidd/adonis-ally-apple",
    "providers": [
      "@bitkidd/adonis-ally-apple"
    ]
  },
  "dependencies": {
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.5"
  }
}
